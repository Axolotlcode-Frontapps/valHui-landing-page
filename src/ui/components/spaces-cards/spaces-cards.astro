---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";

interface Props {
    icon: ImageMetadata;
    title: string;
    list: {
        text: string;
    }[];
    point: ImageMetadata;
}

const { icon, title, list, point } = Astro.props;
---

<article class="spaces-rent">
    <div class="spaces-rent__container">
        <div class="spaces-rent__icon-container">
            <div class="spaces-rent__icon">
                <Image src={icon} alt={title} />
            </div>
        </div>
        <div class="spaces-rent__information">
            <h3 class="spaces-rent__title">{title}</h3>
            <ul>
                {
                    list.map((item) => (
                        <li class="inline-flex items-start space-x-3 mb-[12px]">
                            <Image src={point} alt="point" class="mt-2" />
                            <div>
                                <p class="spaces-rent__text">{item.text}</p>
                            </div><br>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</article>

<style>
    @reference "@/ui/styles/global.css";

    .spaces-rent__container{
        @apply grid grid-cols-[0.5fr_2.5fr] md:grid-cols-[0.5fr_6fr] lg:grid-cols-[0.5fr_2.5fr] xl:grid-cols-[0.5fr_4fr] gap-[16px] h-full;
    }

    .spaces-rent__icon-container{
        @apply place-items-center;
    }

    .spaces-rent__icon {
        @apply bg-[#7148EC1A] p-[12px] w-fit rounded-[10px];
    }

    .spaces-rent__title {
        @apply text-lg text-[#0A0A0A] font-bold mb-[12px];
    }

    .spaces-rent__text {
        @apply text-base text-[#717182] font-normal;
    }
</style>





