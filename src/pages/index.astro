---
import { Layout } from "@/layout";

import { HomeRent } from "@/ui/components/home-rent";
import { HomeFindUsData } from "@/ui/components/home-find-us-data";
import { Faqs } from "@/ui/shared/faqs/faqs";
import { HomeHero } from "@/ui/components/home-hero";
import { HomeCtaData } from "@/ui/components/home-cta-data";
